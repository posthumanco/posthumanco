<div class="row">
	<h1>Authors</h1>
</div>

<div class="row">
	<div class="small-12 large-3 columns">
		<ul>
			{{#each author in controller}}
		  	<li>{{#linkTo 'author' author}}{{author.first_name}}{{/linkTo}}</li>
		 	{{else}}
		 		<li>There are no authors.</li>
			{{/each}}
		</ul>
	</div>
	<div class="small-12 large-9 columns">
		{{outlet}}
	</div>
</div>


