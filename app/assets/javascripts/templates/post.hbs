<h1>{{title}}</h1>

{{#if image}}
	{{imgtag image}}
{{/if}}

{{markdown body}}

<div class="row">
	<div class="small-12 large-12 columns">
		<div class="small-12 large-4 columns">
			<img {{bindAttr src=author.gravatar_url}} />
		</div>
		<div class="small-12 large-8 columns">
			{{#if author}}
				<p>
					{{author.full_name}}
				</p>
				<p>
					{{author.bio}}
				</p>
			{{/if}}
		</div>
	</div>
	{{#if Posthuman.Auth.signedIn}}
	 	{{#linkTo 'edit' this}}Edit{{/linkTo}}
	{{/if}}
</div>
